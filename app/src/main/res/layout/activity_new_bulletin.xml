<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kampus.enhancedbb.NewBulletinActivity">

    <kampus.enhancedbb.MultiSelectionSpinner
        android:id="@+id/profSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <kampus.enhancedbb.MultiSelectionSpinner
        android:id="@+id/subdivSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profSpinner"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Заголовок"
        android:id="@+id/titleText"
        android:layout_below="@+id/subdivSpinner"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTitle"
        android:inputType="textCapSentences"
        android:layout_below="@+id/titleText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Текст объявления"
        android:id="@+id/bodyText"
        android:layout_below="@+id/editTitle"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        android:id="@+id/SaveButton"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/titleText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отмена"
        android:id="@+id/ExitButton"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/titleText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="top"
        android:foregroundGravity="top|left"
        android:layout_below="@+id/bodyText"
        android:layout_above="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата конца"
        android:id="@+id/textView2"
        android:layout_below="@+id/DateStart"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата начала"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/DateStart"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/DateStart"
        android:layout_above="@+id/DateEnd"
        android:layout_alignStart="@+id/DateEnd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/DateEnd"
        android:layout_above="@+id/ExitButton"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
